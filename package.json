{
  "name": "silverstripe-module-skeleton",
  "scripts": {
    "build": "yarn && yarn lint && yarn test && rm -rf client/dist/* && NODE_ENV=production webpack --mode production --bail --progress",
    "dev": "NODE_ENV=development webpack --progress",
    "watch": "NODE_ENV=development webpack --watch --progress",
    "css": "WEBPACK_CHILD=css npm run build",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "yarn lint-js && yarn lint-sass",
    "lint-js": "eslint client/src",
    "lint-js-fix": "eslint client/src --fix",
    "lint-sass": "sass-lint client/src"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@table-library/react-table-library": "^4.1.7",
    "core-js": "^3.26.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.0.0",
    "react-error-boundary": "^4.0.11",
    "recharts": "^2.10.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.24.3",
    "@babel/preset-react": "^7.23.3",
    "@babel/runtime": "^7.20.0",
    "@module-federation/utilities": "^3.0.0",
    "@silverstripe/eslint-config": "^1.0.0",
    "@silverstripe/webpack-config": "^2.0.0",
    "@testing-library/react": "^14.0.0",
    "babel-loader": "^9.1.3",
    "eslint": "^8.0.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest-cli": "^29.2.2",
    "jest-environment-jsdom": "^29.3.1",
    "path": "^0.12.7",
    "webpack": "^5.74.0",
    "webpack-cli": "^5.0.0"
  },
  "browserslist": [
    "defaults"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "client/src"
    ],
    "moduleDirectories": [
      "client/src",
      "node_modules",
      "../admin/client/src",
      "../admin/node_modules",
      "../silverstripe/admin/client/src",
      "../silverstripe/admin/node_modules",
      "../../silverstripe/admin/client/src",
      "../../silverstripe/admin/node_modules"
    ],
    "testMatch": [
      "**/tests/**/*-test.js?(x)"
    ],
    "transform": {
      ".*": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  }
}
